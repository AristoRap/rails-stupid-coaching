<div class="container my-5">
  <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
    <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
      <h1 class="display-4 mb-3">Chat room</h1>
      <div class="d-flex flex-column mb-4 mb-lg-3">
        <div class="border-thick-left mb-3 pl-3">
          <p class="lead"><%= @ask.capitalize %></p>
          <p class="lead text-muted font-italic">-You</p>
        </div>
        <div class="border-thick-left mb-3 rounded-5">
          <p class="lead background-answer-light pl-3 top-right-round font-weight-normal"><%= @answer %></p>
          <p class="lead text-muted font-italic background-answer-light pl-3 bottom-right-round">-Coach</p>
        </div>
      </div>
    </div>
    <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
    <%= link_to("Ask another question", :ask, { class: "lead btn btn-outline-primary" }) %>
    </div>
  </div>
</div>
